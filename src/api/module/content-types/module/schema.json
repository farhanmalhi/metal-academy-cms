{
  "kind": "collectionType",
  "collectionName": "modules",
  "info": {
    "singularName": "module",
    "pluralName": "modules",
    "displayName": "Module",
    "description": "A learning module containing sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "Description": {
      "type": "text",
      "displayName": "Description"
    },
    "Order": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 1,
      "displayName": "Order",
      "default": 1
    },
    "Sections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::section.section",
      "mappedBy": "Modules"
    },
    "SectionOrders": {
      "type": "component",
      "repeatable": true,
      "component": "ordering.section-order",
      "displayName": "Section Orders"
    }
  }
}
