{
  "kind": "collectionType",
  "collectionName": "modules",
  "info": {
    "singularName": "module",
    "pluralName": "modules",
    "displayName": "Module",
    "description": "A learning module containing sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "description": {
      "type": "text",
      "displayName": "Description"
    },
    "order": {
      "type": "integer",
      "required": true,
      "unique": true,
      "min": 1,
      "displayName": "Order"
    },
    "sections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::section.section",
      "inversedBy": "modules",
      "displayName": "Sections"
    }
  }
} 