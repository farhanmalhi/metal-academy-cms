{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Learning resources like videos, flows, or external links"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "Description": {
      "type": "text",
      "displayName": "Description"
    },
    "Thumbnail": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "upload": {
          "dimensions": {
            "width": 170,
            "height": 84
          }
        }
      }
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "video",
        "flow",
        "link"
      ],
      "required": true,
      "displayName": "Resource Type"
    },
    "Url": {
      "type": "string",
      "required": true,
      "displayName": "URL"
    },
    "Sections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::section.section",
      "mappedBy": "Resources"
    }
  }
}
