{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Learning resources like videos, flows, or external links"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "resourceType": {
      "type": "enumeration",
      "enum": [
        "video",
        "flow",
        "externalLink"
      ],
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "sections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::section.section",
      "inversedBy": "resources"
    }
  }
} 