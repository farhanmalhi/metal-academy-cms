{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": "Learning resources like videos, flows, or external links"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "description": {
      "type": "text",
      "displayName": "Description"
    },
    "thumbnail": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ],
      "displayName": "Thumbnail"
    },
    "resourceType": {
      "type": "enumeration",
      "enum": [
        "video",
        "flow",
        "link"
      ],
      "required": true,
      "displayName": "Resource Type"
    },
    "url": {
      "type": "string",
      "required": true,
      "displayName": "URL"
    },
    "sections": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::section.section",
      "mappedBy": "resources",
      "displayName": "Sections"
    }
  }
} 