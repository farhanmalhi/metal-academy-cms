{
  "kind": "collectionType",
  "collectionName": "sections",
  "info": {
    "singularName": "section",
    "pluralName": "sections",
    "displayName": "Section",
    "description": "A section containing resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "description": {
      "type": "text",
      "displayName": "Description"
    },
    "order": {
      "type": "integer",
      "required": true,
      "min": 1,
      "displayName": "Order"
    },
    "modules": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::module.module",
      "mappedBy": "sections",
      "displayName": "Modules"
    },
    "resources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource.resource",
      "inversedBy": "sections",
      "displayName": "Resources"
    }
  }
} 