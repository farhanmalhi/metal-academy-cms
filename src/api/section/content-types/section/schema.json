{
  "kind": "collectionType",
  "collectionName": "sections",
  "info": {
    "singularName": "section",
    "pluralName": "sections",
    "displayName": "Section",
    "description": "A section containing resources"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true,
      "displayName": "Title"
    },
    "Description": {
      "type": "text",
      "displayName": "Description"
    },
    "Modules": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::module.module",
      "inversedBy": "Sections"
    },
    "Resources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource.resource",
      "inversedBy": "Sections"
    },
    "ResourceOrders": {
      "type": "component",
      "repeatable": true,
      "component": "ordering.resource-order",
      "displayName": "Resource Orders"
    }
  }
}
